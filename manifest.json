// file is table of contents formatted in JSON

{
  "manifest_version": 2, //mandatory v2 for manifest (v1 deprecated)

  "name": "One-click Kittens",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",

  // need permission to access from another source
  "permissions": [
    "https://secure.flickr.com/"
  ],
  "browser_action": { //icon that appears on browser
    "default_icon": "icon.png",
    "default_popup": "popup.html" //when icon clicked
  }
}
